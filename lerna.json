{
    "packages": [
        "packages/*"
    ],
    "version": "independent",
    "useWorkspaces": true,
    "npmClient": "yarn",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "registry": "http://localhost:4873",
            "access": "public",
            "allowBranch": [
                "master",
                "next",
                "feat/*",
                "fix/*"
            ],
            "yes": true
        }
    }
}
