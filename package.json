{
    "name": "platoon",
    "private": true,
    "author": "Benoit Deziel <ben@benoitdeziel.com>",
    "homepage": "https://github.com/FrontendRangers/platoon#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/FrontendRangers/platoon.git"
    },
    "license": "MIT",
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/react-*",
            "**/react-*/**",
            "@storybook/**",
            "react-transition-group",
            "react-transition-group/**",
            "platoon-website/**"
        ]
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "start": "lerna run start",
        "build": "run-s build:core build:libs build:website",
        "build:core": "yarn workspace @frontendrangers/platoon-core build",
        "build:libs": "yarn workspace @frontendrangers/platoon-react build",
        "build:website": "yarn workspace platoon-website build",
        "test": "lerna run test",
        "commit": "git-cz",
        "bump": "lerna version --yes",
        "prerelease": "yarn build",
        "release": "./scripts/release.sh"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
            "post-checkout": "yarnhook",
            "post-merge": "yarnhook",
            "post-rewrite": "yarnhook"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "devDependencies": {
        "@auto-it/conventional-commits": "^7.12.2",
        "@auto-it/npm": "^7.12.2",
        "@babel/core": "^7.6.4",
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@types/react": "^16.9.7",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "auto": "^7.12.2",
        "babel-loader": "^8.0.6",
        "commitizen": "^4.0.3",
        "cross-env": "^6.0.3",
        "cz-lerna-changelog": "^2.0.2",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-config-react": "^1.1.7",
        "eslint-import-resolver-lerna": "^1.1.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jest": "^23.0.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.16.0",
        "husky": "^3.0.9",
        "lerna": "^3.18.3",
        "lint-staged": "^9.4.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "react-docgen-typescript-loader": "^3.3.0",
        "rimraf": "^3.0.0",
        "rollup": "^1.25.2",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
        "rollup-plugin-terser": "^5.1.2",
        "rollup-plugin-typescript2": "^0.24.3",
        "stylelint": "^11.1.1",
        "stylelint-config-standard": "^19.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.8.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.6.4",
        "webpack": "^4.41.2",
        "yarnhook": "^0.4.3"
    }
}
