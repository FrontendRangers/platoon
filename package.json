{
    "name": "platoon",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "test": "lerna run test",
        "commit": "git-cz",
        "bump": "lerna version --yes",
        "prerelease": "yarn build",
        "release": "cross-env HUSKY_BYPASS=true lerna publish"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "@frontendrangers/platoon-core": "file:packages/core",
        "@frontendrangers/platoon-react": "file:packages/react",
        "@frontendrangers/platoon-vue": "file:packages/vue",
        "example-react": "file:packages/example-react",
        "example-vue": "file:packages/example-vue"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@storybook/addon-actions": "^5.1.3",
        "@storybook/addon-info": "^5.1.3",
        "@storybook/addon-links": "^5.1.3",
        "@storybook/addons": "^5.1.3",
        "@storybook/react": "^5.1.3",
        "@types/jest": "^24.0.13",
        "@types/react": "^16.8.19",
        "@types/storybook__react": "^4.0.2",
        "@types/styled-components": "^4.1.16",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "@vue/cli-plugin-babel": "^3.8.0",
        "@vue/cli-plugin-eslint": "^3.8.0",
        "@vue/cli-plugin-typescript": "^3.8.0",
        "@vue/cli-plugin-unit-jest": "^3.8.0",
        "@vue/cli-service": "^3.8.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "commitizen": "^3.1.1",
        "cross-env": "^5.2.0",
        "cz-lerna-changelog": "^2.0.2",
        "docz": "^1.2.0",
        "docz-theme-default": "^1.2.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.13.0",
        "husky": "^2.4.0",
        "jest": "^24.8.0",
        "lerna": "^3.15.0",
        "lint-staged": "^8.2.0",
        "node-sass": "^4.9.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "react": "^16.8.6",
        "react-docgen-typescript-webpack-plugin": "^1.1.0",
        "react-dom": "^16.8.6",
        "rimraf": "^2.6.3",
        "sass-loader": "^7.1.0",
        "semantic-release": "^15.13.12",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.3",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.33.0"
    }
}
