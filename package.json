{
    "name": "platoon",
    "private": true,
    "author": "Benoit Deziel <ben@benoitdeziel.com>",
    "homepage": "https://github.com/FrontendRangers/platoon#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/FrontendRangers/platoon.git"
    },
    "license": "MIT",
    "workspaces": {
        "packages": [
            "packages/*",
            "examples/*"
        ]
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "start": "lerna run start",
        "start:libs:react": "yarn workspace @frontendrangers/platoon-react start",
        "start:libs:svelte": "yarn workspace @platoon/svelte start",
        "build": "run-s build:core build:libs build:website",
        "build:core": "yarn workspace @frontendrangers/platoon-core build",
        "build:libs": "yarn workspace @frontendrangers/platoon-react build",
        "build:website": "yarn workspace platoon-website build",
        "test": "lerna run test",
        "commit": "git-cz",
        "bump": "lerna version --yes",
        "prerelease": "yarn build",
        "release": "./scripts/release.sh"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix --quiet"
        ],
        "*.{json,md,scss,yaml,yml,ts,tsx}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
            "post-checkout": "yarnhook",
            "post-merge": "yarnhook",
            "post-rewrite": "yarnhook"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "devDependencies": {
        "@auto-it/conventional-commits": "^9.39.0",
        "@auto-it/npm": "^9.39.0",
        "@babel/core": "^7.10.2",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-node-resolve": "^8.0.1",
        "@types/react": "^16.9.35",
        "@typescript-eslint/eslint-plugin": "^3.2.0",
        "@typescript-eslint/parser": "^3.2.0",
        "auto": "^9.39.0",
        "babel-loader": "^8.1.0",
        "commitizen": "^4.1.2",
        "cross-env": "^7.0.2",
        "cz-lerna-changelog": "^2.0.2",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-react": "^1.1.7",
        "eslint-import-resolver-lerna": "^1.1.0",
        "eslint-plugin-import": "^2.21.1",
        "eslint-plugin-jest": "^23.13.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.9",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.15.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "rollup-plugin-terser": "^6.1.0",
        "rollup-plugin-typescript2": "^0.27.1",
        "stylelint": "^13.6.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "ts-loader": "^7.0.5",
        "typescript": "^3.9.5",
        "webpack": "^4.43.0",
        "yarnhook": "^0.4.3"
    },
    "dependencies": {}
}
