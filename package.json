{
    "name": "platoon",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "test": "lerna run test",
        "commit": "git-cz",
        "bump": "lerna version --yes",
        "prerelease": "yarn build",
        "release": "cross-env HUSKY_BYPASS=true lerna publish"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "@frontendrangers/platoon-core": "file:packages/core",
        "@frontendrangers/platoon-react": "file:packages/react",
        "@frontendrangers/platoon-vue": "file:packages/vue",
        "example-react": "file:packages/example-react"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@types/styled-components": "^4.1.16",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "commitizen": "^3.1.1",
        "cross-env": "^5.2.0",
        "cz-lerna-changelog": "^2.0.2",
        "eslint": "^6.0.1",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^3.0.0",
        "lerna": "^3.15.0",
        "lint-staged": "^8.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "rimraf": "^2.6.3",
        "semantic-release": "^15.13.12",
        "styled-components": "^4.3.2",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "typescript": "^3.5.1",
        "webpack": "^4.33.0"
    }
}
