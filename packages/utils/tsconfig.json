{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "es6", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "declarationDir": "dist",
        "esModuleInterop": true,
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
