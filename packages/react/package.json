{
    "name": "@platoon/react",
    "version": "0.1.6",
    "description": "A themeable component library for React",
    "keywords": [
        "react",
        "uikit"
    ],
    "author": "Benoit Deziel <ben@benoitdeziel.com>",
    "homepage": "https://github.com/FrontendRangers/platoon#readme",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "module": "dist/mylib.esm.js",
    "directories": {
        "lib": "dist",
        "test": "__tests__"
    },
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FrontendRangers/platoon.git"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "storybook": "start-storybook -p 6006 -s public",
        "build:storybook": "build-storybook",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "lint:ts": "eslint './**/*.{ts,tsx}'",
        "lint:css": "stylelint './**/*.{ts,tsx}'",
        "prettier": "prettier './**/*.{json,md,scss,yaml,yml,ts,tsx}'",
        "fix:lint": "run-p -c 'lint:* --fix'",
        "generate": "plop",
        "chromatic": "chromatic --project-token CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes"
    },
    "bugs": {
        "url": "https://github.com/FrontendRangers/platoon/issues"
    },
    "dependencies": {
        "@platoon/core": "^0.1.2",
        "@platoon/system": "^0.0.2",
        "@popperjs/core": "^2.6.0",
        "@types/styled-system": "^5.1.10",
        "@types/styled-system__css": "^5.0.14",
        "downshift": "^6.0.7",
        "react-transition-group": "^4.4.1",
        "styled-system": "^5.1.5"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@storybook/addon-a11y": "^6.1.11",
        "@storybook/addon-actions": "^6.1.11",
        "@storybook/addon-essentials": "^6.1.11",
        "@storybook/addon-links": "^6.1.11",
        "@storybook/react": "^6.1.11",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.14",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-transition-group": "^4.4.0",
        "@types/styled-components": "^5.1.7",
        "@types/testing-library__jest-dom": "^5.9.5",
        "@types/testing-library__react": "^10.2.0",
        "babel-loader": "^8.2.2",
        "chromatic": "^5.5.0",
        "jest": "^26.6.3",
        "jest-styled-components": "^7.0.3",
        "plop": "^2.7.4",
        "polished": "^4.0.5",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-is": "^17.0.1",
        "storybook-addon-performance": "^0.13.0",
        "styled-components": "5.2.1",
        "stylelint": "^13.8.0",
        "stylelint-config-standard": "^20.0.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.0.3",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=16",
        "styled-components": ">=5",
        "typescript": ">=4.0"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
