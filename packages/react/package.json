{
    "name": "@platoon/react",
    "version": "0.1.3",
    "description": "A themeable component library for React",
    "keywords": [
        "react",
        "uikit"
    ],
    "author": "Benoit Deziel <ben@benoitdeziel.com>",
    "homepage": "https://github.com/FrontendRangers/platoon#readme",
    "license": "MIT",
    "main": "dist/cjs/index.js",
    "module": "dist/ejs/index.js",
    "jsnext:main": "dist/ejs/index.js",
    "directories": {
        "lib": "dist",
        "test": "__tests__"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FrontendRangers/platoon.git"
    },
    "scripts": {
        "prebuild": "rimraf ./dist & yarn type-check",
        "build": "rollup -c",
        "build:storybook": "build-storybook",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "test": "jest --passWithNoTests",
        "lint": "run-p -c lint:*",
        "lint:ts": "eslint './**/*.{ts,tsx}'",
        "lint:css": "stylelint './**/*.{ts,tsx}'",
        "prettier": "prettier './**/*.{json,md,scss,yaml,yml,ts,tsx}'",
        "fix:lint": "run-p -c 'lint:* --fix'",
        "fix:prettier": "yarn prettier --write",
        "start": "yarn run storybook",
        "storybook": "start-storybook -p 6006",
        "generate": "plop"
    },
    "bugs": {
        "url": "https://github.com/FrontendRangers/platoon/issues"
    },
    "dependencies": {
        "@platoon/core": "^0.1.0",
        "@popperjs/core": "^2.4.4",
        "@styled-system/css": "^5.1.5",
        "@styled-system/theme-get": "^5.1.2",
        "@types/react-transition-group": "^4.4.0",
        "@types/styled-system": "^5.1.10",
        "@types/styled-system__core": "npm:@peduarte/styled-system__core@0.0.1",
        "@types/styled-system__css": "^5.0.13",
        "@types/styled-system__theme-get": "^5.0.0",
        "downshift": "^6.0.5",
        "react-transition-group": "^4.4.1",
        "styled-system": "^5.1.5"
    },
    "devDependencies": {
        "@storybook/addon-a11y": "^6.0.21",
        "@storybook/addon-essentials": "^6.0.21",
        "@storybook/react": "^6.0.21",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^10.4.9",
        "@types/jest": "^26.0.10",
        "@types/node": "^14.6.2",
        "@types/react": "^16.9.48",
        "@types/react-dom": "^16.9.8",
        "@types/react-transition-group": "^4.4.0",
        "@types/styled-components": "^5.1.3",
        "@types/testing-library__jest-dom": "^5.9.2",
        "@types/testing-library__react": "^10.2.0",
        "chromatic": "^5.1.0",
        "jest": "^26.4.1",
        "jest-styled-components": "^7.0.3",
        "plop": "^2.7.4",
        "polished": "^3.6.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-is": "^16.13.1",
        "rollup": "^2.26.11",
        "rollup-plugin-terser": "^7.0.0",
        "rollup-plugin-typescript2": "^0.27.2",
        "styled-components": "5.2.0",
        "stylelint": "^13.6.1",
        "stylelint-config-standard": "^20.0.0",
        "ts-jest": "^26.3.0",
        "typescript": "^3.9.7"
    },
    "peerDependencies": {
        "react": "^16.12.*",
        "react-dom": "^16.12.*",
        "styled-components": "4.* || 5.*",
        "typescript": "^3.7.*"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
