{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "es6", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "esModuleInterop": true,
        "types": ["react"]
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "**/*.spec.tsx", "**/*.stories.tsx"]
}
